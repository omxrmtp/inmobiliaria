FROM php:8.2-apache

# Instalar extensiones PHP necesarias
RUN docker-php-ext-install pdo pdo_mysql mysqli

# Habilitar mod_rewrite para .htaccess
RUN a2enmod rewrite

# Configurar Apache para servir desde /public y permitir .htaccess
# 1) Cambiar DocumentRoot del vhost por defecto
RUN sed -i 's|DocumentRoot /var/www/html|DocumentRoot /var/www/html/public|g' /etc/apache2/sites-available/000-default.conf

# 2) Crear configuración específica para la carpeta public
RUN printf "<Directory /var/www/html/public>\n    Options Indexes FollowSymLinks\n    AllowOverride All\n    Require all granted\n</Directory>\n" \
    > /etc/apache2/conf-available/public.conf \
 && a2enconf public

# Copiar configuración PHP
COPY php.ini /usr/local/etc/php/

# Exponer puerto
EXPOSE 80

CMD ["apache2-foreground"]
